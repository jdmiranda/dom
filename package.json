{
  "name": "@oozcitak/dom",
  "version": "0.0.6",
  "keywords": [
    "dom",
    "whatwg"
  ],
  "homepage": "http://github.com/oozcitak/dom",
  "description": "A modern DOM implementation",
  "author": "Ozgur Ozcitak <oozcitak@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/oozcitak/dom.git"
  },
  "bugs": {
    "url": "http://github.com/oozcitak/dom/issues"
  },
  "main": "./lib/index",
  "engines": {
    "node": ">=6.0"
  },
  "dependencies": {
    "@oozcitak/infra": "1.0.1",
    "@oozcitak/url": "0.0.3"
  },
  "devDependencies": {
    "typescript": "*",
    "jest": "*",
    "ts-jest": "*",
    "dedent": "*",
    "glob": "*",
    "@types/node": "*",
    "@types/jest": "*",
    "@types/dedent": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.tsx?$",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "scripts": {
    "compile": "rm -rf lib && tsc",
    "test": "npm run compile && jest",
    "testChanged": "npm run compile && jest --onlyChanged",
    "cover": "npm run compile && jest --coverage",
    "publish-public": "npm run test && npm publish --access public"
  }
}
