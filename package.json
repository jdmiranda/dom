{
  "name": "@oozcitak/dom",
  "version": "1.0.0",
  "keywords": [
    "dom",
    "whatwg"
  ],
  "homepage": "http://github.com/oozcitak/dom",
  "description": "A modern DOM implementation",
  "author": "Ozgur Ozcitak <oozcitak@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/oozcitak/dom.git"
  },
  "bugs": {
    "url": "http://github.com/oozcitak/dom/issues"
  },
  "main": "./lib/index",
  "engines": {
    "node": ">=6.0"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@oozcitak/util": "1.0.2",
    "@oozcitak/infra": "1.0.4",
    "@oozcitak/url": "0.0.9"
  },
  "devDependencies": {
    "@types/benchmark": "*",
    "@types/chalk": "*",
    "@types/dedent": "*",
    "@types/jest": "*",
    "@types/jsdom": "*",
    "@types/node": "^12.12.16",
    "@types/xmldom": "*",
    "benchmark": "*",
    "chalk": "^3.0.0",
    "dedent": "*",
    "git-state": "*",
    "glob": "*",
    "jest": "*",
    "jsdom": "*",
    "ts-jest": "*",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3",
    "xmldom": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.tsx?$",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "scripts": {
    "compile": "rm -rf lib && tsc --version && tsc",
    "test": "npm run compile && jest --coverage",
    "perf": "npm run compile && ts-node ./perf/perf.ts",
    "prof": "npm run compile && rm -f isolate-*-v8.log && node --prof ./perf/prof.js && find . -name isolate-*-v8.log -exec mv {} isolate-v8.log ; && node --prof-process isolate-v8.log > isolate.log && rm isolate-v8.log",
    "publish-public": "npm run test && npm publish --access public"
  }
}
